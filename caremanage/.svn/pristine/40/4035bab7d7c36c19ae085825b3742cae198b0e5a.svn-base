html{
    width: 100%;
    height: 100%;
}
.title{
    margin-top: 10px;
    width: 100%;
}
.btn-default1,.btn-default2{
    font-size: 17px;
    display: block;
    background-color: #2095f2;
    border-color: #2095f2;
    width: 90%;
    margin-left: 5%;
    margin-right: 5%;
    color: #fff;
    height: 40px;
    line-height: 30px;
    border-radius:4px;
    text-align:center;
    bottom: 2px;

}
.btn-primary{
    float: left;
    width: 80px;
    height: 35px;
    background-color: #2095f2;
    border-color: #2095f2;
    margin-left: 50px;
}
.btn-primary2{
    float: left;
    width: 80px;
    height: 35px;
    background-color: #2095f2;
    border-color: #2095f2;
    margin-left: 130px;
}
#submit{
    float: right;
    margin-top: 10px;
    width: 80px;
    height: 35px;
    background-color: #2095f2;
    border-color: #2095f2;
}
.btn-default{
    float: right;
    width: 80px;
    height: 35px;
    margin-right: 50px;
}
.content2,.content3{
    display: none;
    line-height: 26px;
}

.content1{
    line-height: 26px;
    position: relative;
    z-index: 1;
}

.verify {!important;
    width: 80%;
    height: 175px;
    border: 2px solid #000;
    z-index: 3;
    position: absolute;
    background-color: #fff;
    border-radius: 5px;
    margin-left: 10%;
    margin-right: 10%;
    margin-top: 180px;
    
    
}
.verify .form-control{
    width: 70%;
    margin: 24px auto;
}
.verify label{
    font: 17px/1.5 "Microsoft Yahei", "Hiragino Sans GB", Helvetica, "Helvetica Neue", 微软雅黑, Tahoma, Arial, sans-serif;
    color: #b84712;
    margin-top: 10px;
    margin-left: 5px;
}
/*遮罩层*/
#screen{!important;
    position: fixed;
    top: 0;
    left: 0;
    /*透明度*/
    background: rgba(0, 0, 0, 0.6) none repeat scroll 0% 0%;
    z-index: 2;
    width: 100%;
    height: 100%;
}
