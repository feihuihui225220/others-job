console.log(Math.ceil((long/3600/24/1000)/30))

        if (Math.ceil((long/3600/24/1000)/30) >= 1) {
            var m = Math.ceil((long/3600/24/1000)/30);
            var sumopt = 0;

            $('table select').each(function () {
                console.log($(this).attr('value'))
                if (!isNaN($(this).attr('value'))) {
