body {background:#D9EBEB;}

.reg_area {margin:50px auto;width:900px;border:1px solid #ccc;background:#fff;padding:20px;overflow:hidden;zoom:1;}
.reg_area h2 {background:url(img/ico_person_add.png) no-repeat 10px 50%;height:60px;line-height:60px;padding-left:70px;font-size:16px;border-bottom:1px solid #ddd;}
.reg_area dl {padding:30px 0 10px;overflow:hidden;zoom:1;margin:0;}
.reg_area dt {float:left;height:50px;text-align:right;width:100px;text-align:right;}
.reg_area dd {float:left;width:750px;height:50px;padding-left:10px;margin:0;}
.reg_area select, .reg_area input {margin-right:20px;}
.reg_area p {border-top:1px solid #ddd;padding-top:30px;}
p.opt .btn {/*background-position:0 -93px;*/float:right;margin:0 0 0 20px;}

.fix_reg {width:400px;}
.fix_reg h2 {background-image:url(img/ico_opt.png);}
.fix_reg dd {width:250px;}


/* 弹窗 */
.fix_pop h2 {background:none;padding:0;height:40px;line-height:40px;}
.fix_pop dd {width:200px;}




/* 错误页面 */
.fix_error h2 {background-image:url(img/ico_error.png);padding-left:80px;}
.fix_error div {padding:40px 0 50px 400px;background:url(img/error.jpg) no-repeat 160px -40px;}
.fix_error h1 {font-size:46px;margin-bottom:30px;border:0 none;font-family:'\5FAE\8F6F\96C5\9ED1';}
.fix_error p {font-size:14px;line-height:2;width:320px;border:0 none;padding:0;margin-bottom:30px;}
